<div class="modal fade" id="dvd-details-modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            &times;
                        </button>
                    </div>
                    <div class="modal-body">
                        <h3 id="dvd-detail-id"></h3>
                        <table id="dvd-details-table">
                            <tr>
                                <th>Title:</th>
                                <td id="dvd-detail-title"></td>
                            </tr>
                            <tr>
                                <th>Release Date:</th>
                                <td id="dvd-detail-releasedate"></td>
                            </tr>
                            <tr>
                                <th>MPAA Rating:</th>
                                <td id="dvd-detail-mpaarating"></td>
                            </tr>
                            <tr>
                                <th>Director:</th>
                                <td id="dvd-detail-director"></td>
                            </tr>
                            <tr>
                                <th>Studio:</th>
                                <td id="dvd-detail-studio"></td>
                            </tr>
                            <tr>
                                <th>User Note:</th>
                                <td id="dvd-detail-usernote"></td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="close" data-dismiss="modal">
                            Close
                        </button>
                    </div>
                </div>
            </div>
        </div>